{
  "name": "arcadequiz",
  "version": "1.0.0",
  "description": "Top-down arcade puzzle game with quizzes",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:ai": "vite --no-open",
    "dev:log": "vite > documentation/temp_docs/LOGS.log 2>&1",
    "dev:clean": "npm run dev:stop ; npm run dev:ai",
    "dev:stop": "powershell -Command \"Get-NetTCPConnection -LocalPort 3000 -ErrorAction SilentlyContinue | ForEach-Object { Stop-Process -Id $_.OwningProcess -Force } -ErrorAction SilentlyContinue\"",
    "analyze-texts": "node --loader ts-node/esm scripts/analyze-texts.ts",
    "cache:version": "node scripts/generate-cache-version.js",
    "prebuild": "npm run analyze-texts && npm run cache:version",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:log": "jest > documentation/temp_docs/TEST_RESULTS.log 2>&1",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:log": "jest --coverage > documentation/temp_docs/TEST_COVERAGE.log 2>&1",
    "test:unit": "jest --testPathPattern=unit",
    "test:unit:log": "jest --testPathPattern=unit > documentation/temp_docs/TEST_UNIT.log 2>&1",
    "test:scaling": "jest src/tests/unit/utils/DeviceUtils.test.ts src/tests/unit/constants/scalingConstants.test.ts src/tests/unit/react/PhaserGame.test.tsx",
    "test:scaling:log": "jest src/tests/unit/utils/DeviceUtils.test.ts src/tests/unit/constants/scalingConstants.test.ts src/tests/unit/react/PhaserGame.test.tsx > documentation/temp_docs/TEST_SCALING.log 2>&1",
    "test:spawn": "jest src/tests/unit/systems/SpawnSystem.test.ts",
    "test:spawn:log": "jest src/tests/unit/systems/SpawnSystem.test.ts > documentation/temp_docs/TEST_SPAWN.log 2>&1",
    "test:bubble": "jest src/tests/unit/ui/QuestionBubble.test.ts",
    "test:bubble:log": "jest src/tests/unit/ui/QuestionBubble.test.ts > documentation/temp_docs/TEST_BUBBLE.log 2>&1",
    "test:bubble:json": "jest src/tests/unit/ui/QuestionBubble.test.ts --json --outputFile=documentation/temp_docs/TEST_BUBBLE.json",
    "test:bubble:save": "node scripts/save-test-results.js src/tests/unit/ui/QuestionBubble.test.ts",
    "test:bubble:report": "node scripts/generate-test-report.js documentation/temp_docs/TEST_QuestionBubble_2025-12-08T20-09-39.json",
    "test:modal-scaling": "jest src/tests/unit/ui/ModalSizeCalculator.test.ts src/tests/unit/utils/FontSizeCalculator.test.ts src/tests/unit/ui/KeyQuestionModal.test.ts src/tests/unit/ui/PortalModal.test.ts src/tests/unit/ui/GameOverModal.test.ts src/tests/integration/modal-scaling.test.ts",
    "test:modal-scaling:log": "jest src/tests/unit/ui/ModalSizeCalculator.test.ts src/tests/unit/utils/FontSizeCalculator.test.ts src/tests/unit/ui/KeyQuestionModal.test.ts src/tests/unit/ui/PortalModal.test.ts src/tests/unit/ui/GameOverModal.test.ts src/tests/integration/modal-scaling.test.ts > documentation/temp_docs/TEST_MODAL_SCALING.log 2>&1",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:auto": "node scripts/runTestsAndCheck.js",
    "cleanup:temp": "node scripts/cleanup-temp-files.js && node scripts/check-memory-size.js"
  },
  "dependencies": {
    "phaser": "^3.90.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "cypress": "^13.7.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pngjs": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-static-copy": "^3.2.0"
  },
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom"
  }
}
